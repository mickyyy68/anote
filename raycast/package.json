{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "anote",
  "title": "anote",
  "description": "Search, copy, and update anote notes from Raycast",
  "icon": "assets/anote.png",
  "author": "mike",
  "license": "MIT",
  "commands": [
    {
      "name": "search-notes",
      "title": "Search Notes",
      "description": "Search and copy notes",
      "mode": "view"
    },
    {
      "name": "create-note",
      "title": "Create Note",
      "description": "Create a note in Inbox",
      "mode": "view"
    },
    {
      "name": "quick-note",
      "title": "Quick Note",
      "description": "Quickly create a note with clipboard paste support",
      "mode": "view"
    },
    {
      "name": "voice-note",
      "title": "Voice Note",
      "description": "Create a note using voice input",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "bridgeBinaryPath",
      "type": "textfield",
      "required": false,
      "title": "Bridge Binary Path",
      "description": "Absolute path to anote_bridge executable"
    },
    {
      "name": "bridgeRepoRoot",
      "type": "directory",
      "required": false,
      "title": "Bridge Repo Root",
      "description": "Path to the anote repository root (containing src-tauri)"
    }
  ],
  "permissions": [
    "read-write-user-files",
    "execute-api",
    "speech"
  ],
  "scripts": {
    "dev": "ray develop",
    "build": "ray build",
    "lint": "ray lint",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "dependencies": {
    "@raycast/api": "1.94.0",
    "react": "19.0.0"
  },
  "devDependencies": {
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "typescript": "^5.7.2"
  }
}
